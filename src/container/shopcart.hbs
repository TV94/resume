<div>
    {{>shopheader}}
</div>

    <div>
        {{#with header}}
            <p class="h1 mt-5 mb-2">{{title}}</p>
            {{#with button}}
        <a href={{link}} class="btn btn-outline-secondary mt-2 mb-5" role="button" data-bs-toggle="button">{{text}}</a>
            {{/with}}
        {{/with}} 
    </div>
    <hr/>
        

{{#each goodsBlock}}
        <div class='card mb-3'>
  <div class='card-body'>
    <div class='row'>
      <div class='col-2'>
        <img src='{{image}}' alt='' class='card-img-center mt-3' />
      </div>
      <div class='col-4'>
        <h4 class='card-title'>{{name}}</h4>
        <p class='card-text'>{{description}}</p>
      </div>
      <div class='col-2 mt-5 ps-5'>
        <h6 class='card-text'>{{price.title}}</h6>
        <strong class='card-text'>{{price.value}}</strong>
      </div>
      <div class='col-2 mt-5 ps-5'>
        <p class='card-text'>{{amount}}</p>
      </div>
      <div class='col-2'>
        {{#each buttons}}
          {{#if isPrimary}}
            <button class='btn btn-primary mt-5 mb-2'>
              {{text}}
            </button>
          {{/if}}
          {{#if isDanger}}
            <button class='btn btn-outline-danger mt-1'>
              {{text}}
            </button>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{/each}}

<hr/>

<div>
    {{#with total}}
        <h5>{{title}}</h5>
        <h3>{{amount}}</h3>
        <p>{{delivery}}</p>
        {{#each buttons}}
            <div class="mb-2">
                {{#if isSuccess}}
                <a href={{link}} class="btn btn-success" role="button">
                        {{text}}
                    </a>
                {{/if}}
            </div>
            <div class="mb-4">
                {{#if isOutline}}
                    <a href={{link}} class="btn btn-outline-success" role="button">
                        {{text}}
                    </a>
                {{/if}}
            </div>
        {{/each}}
    {{/with}}
</div>

<hr/>

<div class="mb-3">
    {{#with goodsOtherBlock}}
    <div class="text-center">
        <h4>{{title}}</h4>
    </div>
        {{>shopcard}}
    {{/with}}
</div>
<hr/>

<div class="card text-bg-dark mb-3" style="max-width: 18rem;">
    {{#with subscribe}}
        <div class="card-header">
            <p class="h2">{{header}}</p>
        </div>
        <div class="card-title">
            {{description}}
        </div>
        <div class="card-body">
            {{#each buttons}}
                 <a href={{link}} class="btn btn-primary mb-2" role="button">
                        {{text}}
                </a>
            {{/each}}
        </div>
    {{/with}}
</div>


{{>shopfooter}}