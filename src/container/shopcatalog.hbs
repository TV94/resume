{{>shopheader}}

<nav aria-label='breadcrumb'>
  <ol class='breadcrumb'>
    {{#each breadcrumb}}
      <li class='breadcrumb-item'>
        <a
          href={{url}}
          class='breadcrumb-item text-decoration-none {{#if @last}} active {{/if}}'>{{name}}</a>
      </li>
    {{/each}}
  </ol>
</nav>

<h1 class='m-5'>{{header}}</h1>

<section class='mb-5'>
  <div class='row'>
    {{#each sortBlock}}
      <div class='col-3'>
        <select
          name=''
          id=''
          class='form-select'
          aria-placeholder='{{placeholder}}'>
          {{#each options}}
            <option value='{{value}}'>{{text}}</option>
          {{/each}}
        </select>
      </div>
    {{/each}}
  </div>
</section>

<section>
  <div class='row'>
    <div class='col-12'>
      <div class='row'>
        {{#with filterBlock}}
          <div class='col-4'>
            <div class='card'>
              <div class='card-body'>
                {{#with sellers}}
                  <label class='form-label'>
                    {{title}}
                  </label>
                  {{#each list}}
                    <div class='form-check'>
                      <input
                        type='checkbox'
                        class='form-check-input' />
                      <label
                        for=''
                        class='form-check-label'>{{value}}</label>
                    </div>
                  {{/each}}
                {{/with}}
                <hr />
                {{#with brands}}
                  <label for='' class='form-label mb-3'>
                    {{title}}
                  </label>
                  <input
                    type='text'
                    class='form-control'
                    placeholder='{{input.placeholder}}' />
                  <div class='mt-3'></div>
                  {{#each options}}
                    <div class='form-check'>
                      <input
                        type='checkbox'
                        class='form-check-input' />
                      <label
                        for=''
                        class='form-check-label'>{{value}}</label>
                    </div>
                  {{/each}}
                {{/with}}
                <hr />
                <div class='row gx-2'>
                  {{#with price}}
                    <label
                      class='form-label'>{{title}}</label>
                    {{#with range}}
                      <div class='col-4 ps-0'>
                        <input
                          type='text'
                          class='form-control'
                          placeholder='{{from}}' />
                      </div>
                      <div class='col-4 ps-0'>
                        <input
                          type='text'
                          class='form-control'
                          placeholder='{{to}}' />
                      </div>
                    {{/with}}
                    <div class='col-4 ps-3'>
                      <a
                        href='{{button.link}}'
                        class='btn btn-primary'>{{button.text}}</a>
                    </div>
                  {{/with}}
                </div>
                <hr />
                {{#each filterList}}
                  <label for='' class='form-label mb-3'>
                    {{title}}
                  </label>
                  <div class=''></div>
                  {{#each options}}
                    <div class='form-check'>
                      <input
                        type='checkbox'
                        class='form-check-input' />
                      <label
                        for=''
                        class='form-check-label'>{{value}}</label>
                    </div>
                  {{/each}}
                  <hr />
                {{/each}}
              </div>
            </div>
          </div>
        {{/with}}
        <div class='col-8'>
          <div class='row g-2'>
            {{#each goodsList}}
              {{>catalogItem}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{>shopaction}}

<hr>

{{>shopfooter}}  


