<div>
   {{>shopheader}}
</div>

<p class="h1 mb-3 mt-3">{{header}}</p>
<div class="row">
    <div class="col-8">
        <div>
            {{#with contacts_data}}
            <div>
                <p class="h3 ">{{title}}</p>
                {{#each buttons}}
                    {{#if isPrimary}}
                    <button type="button" class="btn btn-warning">{{text}}</button>
                    {{/if}}
                    {{#if isOutline}}
                    <button type="button" class="btn btn-outline-warning">{{text}}</button>
                    {{/if}}
                {{/each}}
            

                {{#with form}}
                <div class="row">
                {{#with input}}
                <div class="col-5 mb-3 mt-3">
                    <label for="inputPassword5" class="form-label">{{surname.label}}</label>
                    <input type="password" id="inputPassword5" class="form-control" aria-labelledby="passwordHelpBlock" placeholder={{surname.placeholder}}>
                    <div id="passwordHelpBlock" class="form-text" >
                    {{surname.caption}}
                    </div>
                </div>
                <div class="col-5 mb-3 mt-3">
                    <label for="inputPassword5" class="form-label">{{name.label}}</label>
                    <input type="password" id="inputPassword5" class="form-control" aria-labelledby="passwordHelpBlock" placeholder={{name.placeholder}}>
                    <div id="passwordHelpBlock" class="form-text" >
                    {{name.caption}}
                    </div>
                </div>
                    <div class="col-5 mb-3">
                    <label for="inputPassword5" class="form-label">{{phone.label}}</label>
                    <input type="password" id="inputPassword5" class="form-control" aria-labelledby="passwordHelpBlock" placeholder={{phone.placeholder}}>
                    <div id="passwordHelpBlock" class="form-text" >
                    {{phone.caption}}
                    </div>
                    </div>

                        <div class="col-5 mb-3">
                    <label for="inputPassword5" class="form-label">{{email.label}}</label>
                    <input type="password" id="inputPassword5" class="form-control" aria-labelledby="passwordHelpBlock" placeholder={{email.placeholder}}>
                    <div id="passwordHelpBlock" class="form-text" >
                    {{email.caption}}
                    </div>
                    </div>
                {{/with}}  
        </div>
        </div>
                <hr/>

                {{#each switch}}
                    {{#if isActive}}
                    <div class="form-check form-switch mb-3 mt-3">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked">{{text}}</label>
                    </div>
                    {{else}}
                    <div class="form-check form-switch mb-3 mt-3">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">{{text}}</label>
                    </div>
                    {{/if}}
                {{/each}}
                {{/with}}
                </div>
                {{/with}}

                <div class="row">
                <div class="col-12">
                    <hr/>
                {{#with delivery}}
                <p class="h3 ">{{title}}</p>
                <div class="card">
                    <div class="col-4">
                        <div class="input-group mb-3">
                            <div classa="input-group-prepend">
                                {{#each select}}
                                        <label class="form_label">
                                            {{label}}
                                        </label>
                                        <select class="custom-select" data-style="btn-success">
                                        <option selected>{{placeholder}}</option>
                                            {{#each options}}
                                                <option value={{value}}>{{text}}</option>
                                            {{/each}}
                                        </select>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    {{#each delivery_type}}
                        <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                        {{type}}
                        </label>
                        </div>
                    {{/each}}
                </div>
                <hr/>

                <div>
                    {{#with payment}}
                        <legend class="title">
                            {{title}}
                        </legend>
                        {{#each list}}
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        {{type}}
                                    </label>
                                <div id="emailHelp" class="form-text">{{description}}</div>
                                </div>
                            </div>
                        {{/each}}
                    {{/with}}
                </div>

                {{/with}}
            </div>
        </div>
    </div>

        <div class="col-4 ">
            <div class="card mb-3 mt-3 p-2">
                {{#each action_block}}
                <div class="flex-column my-1">
                    {{#if isSuccess }}
                    <button type="button" class="btn btn-success">{{text}}</button>
                    {{/if}}
                    {{#if isDanger}}
                    <button type="button" class="btn btn-danger">{{text}}</button>
                    {{/if}}
                    {{#if isInfo}}
                    <button type="button" class="btn btn-info">{{text}}</button>
                    {{/if}}
                </div>
                {{/each}}
            </div>

            <div class="card my-1 p-2">
                {{#with total}}
                    <p class="h3 ">{{title}}</p>
                        {{#each item_list}}
                                <p>{{name}}: {{price}}</p>
                        {{/each}}
                        <hr/>
                        {{#each additional_info}}
                            <p>{{text}}: {{value}}</p>
                        {{/each}}
                    <hr/>
                        {{#with total_price}}
                            {{text}}: {{value}}
                        {{/with}}
                    <hr/>
                        {{#each button}}
                        <div class="my-1">
                            {{#if isPrimary}}
                                <button type="button" class="btn btn-primary">{{text}}</button>
                            {{/if}}
                            {{#if isOutline}}
                                <button type="button" class="btn btn-outline-primary">{{text}}</button>
                            {{/if}}
                            </div>
                        {{/each}}
                {{/with}}
            </div>
        </div>
        
    </div>    
</div>


    
    {{>shopfooter}}

