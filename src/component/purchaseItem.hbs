
<div class='card mb-3'>
  <div class='card-body'>
    <div class='row'>
      <div class='col-4'>
        <p class='card-text'>
          {{number}}
          <br />
          <b>{{status}}</b>
        </p>
      </div>
      <div class='col-2'>
        <p class='card-text'>
          {{amount.title}}
          <br />
          <b>{{amount.value}}</b>
        </p>
      </div>
      <div class='col-4'>
        <div class='row'>
          {{#each images}}
            <div class='col-4'>
              <img
                src='{{this}}'
                alt=''
                class='card-img-top'
              />
            </div>
          {{/each}}
        </div>
      </div>
      <div class='col-2'>
        {{#with button}}
          {{#if isPrimary}}
            <a
              href='{{link}}'
              class='btn btn-primary mt-3'
            >{{text}}</a>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </div>
</div>