
<div class="col-6">
  <div class="card h-100">
    <div class="card-body">
      <img src="{{ img }}" alt="" class="card-img-top" />
      <div class="m-2 mb-3">
        {{#if isHot}}
        <span
          class="badge text-bg-warning text-uppercase rounded-pill"
        >
          hot!
        </span>
        {{/if}}
        {{#if isNew}}
        <span
          class="badge text-bg-primary text-capitalize rounded-pill"
        >
          new
        </span>
        {{/if}}
      </div>
      <div class="flex-column">
        {{#if isFast}}
        <button class="btn btn-sm btn-success mb-2">
          Швидка доставка
        </button>
        {{/if}}
        {{#if isFree}}
        <button class="btn btn-sm btn-secondary mb-2">
          Безкоштовна доставка
        </button>
        {{/if}}
      </div>
      <h6 class="card-title fs-4">{{ name }}</h6>
      <p class="card-text">
        {{ review.amount }}: {{ review.text }}
      </p>
      <p class="card-text">
        <b class="fs-4">{{ price }}</b>
      </p>
      <p class="card-text">
        {{ delivery }}
      </p>
      <div class="flex-column">
        {{#each buttons}}
        {{#if isPrimary}}
        <a href="{{ link }}" class="btn btn-primary mb-2">{{
          text
        }}</a>
        {{/if}}

        {{#if isSecondary}}
        <a
          href="{{ link }}"
          class="btn btn-secondary mb-2"
          >{{ text }}</a
        >
        {{/if}}
        {{/each}}
      </div>
      <ul>
        {{#each characteristics}}
        <li>{{ title }}: {{ value }}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>